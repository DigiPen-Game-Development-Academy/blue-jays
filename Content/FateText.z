class FateText : ZilchComponent
{
    var TP : TurretPlace;
    function Initialize(init : CogInitializer)
    {
        this.TP = this.Space.FindObjectByName("Player").TurretPlace;
        Zero.Connect(this.Space, Events.LogicUpdate, this.OnLogicUpdate);
    }

    function OnLogicUpdate(event : UpdateEvent)
    {
        this.Owner.SpriteText.Text = "Fate: `Math.Floor(this.TP.Fate)`/`this.TP.MaxFate`";
    }
}
