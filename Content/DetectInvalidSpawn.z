class DetectInvalidSpawn : ZilchComponent
{
    [Property] var Refund : Real = 0;
    function Initialize(init : CogInitializer)
    {
        Zero.Connect(this.Owner, Events.CollisionStarted, this.OnCollide);
    }

    function OnCollide(event : CollisionEvent)
    {
        this.Owner.Parent.Destroy();
        this.Space.FindObjectByName("Player").TurretPlace.Fate += this.Refund;
    }
}
