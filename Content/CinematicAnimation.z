class CinematicAnimation : ZilchComponent
{
    function Initialize(init : CogInitializer)
    {
        var sequence = Actions.Sequence(this.Owner.Actions);
        Actions.Delay(sequence,5);
        Actions.Property(
            sequence,
            @this.Owner.Camera.Size,
            this.Owner.Camera.Size + 10,
            3,
            Ease.SinOut);
            
            
    }

}
