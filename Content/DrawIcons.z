class DrawIcons : ZilchComponent
{
    function Draw(turrets : Array[Turret])
    {
        for (var i = 0; i < turrets.Count; i += 1)
        {
            var icon = this.Space.CreateAtPosition(Archetype.TurretIcon, Real3(-16 + i * 4,8,0));
            icon.TurretIcon.Init(turrets[i], i + 1);
        }
    }
}
