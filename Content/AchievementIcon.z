//Author: Eli Miller
//Purpose: Initializes an achievement icon.
class AchievementIcon : ZilchComponent
{
    var Achievement : Achievement;
    function Init(ach : Achievement)
    {
        this.Achievement = ach;
        this.Owner.Sprite.SpriteSource = ach.Sprite;
        if(!ach.Unlocked)
        {
            //Black out the icon to show it's locked.
            this.Owner.Sprite.Color = Real4(0,0,0,1);
        }
        this.Owner.HoverTextBox.Init(ach);
    }
}
