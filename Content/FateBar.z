//Author: Eli Miller
//Purpose: Displays the current fate as a bar.

class FateBar : ZilchComponent
{
    var TP : TurretPlace;
    function Initialize(init : CogInitializer)
    {
        this.TP = this.Space.FindObjectByName("Player").TurretPlace;
        Zero.Connect(this.Space, Events.LogicUpdate, this.OnLogicUpdate);
    }

    function OnLogicUpdate(event : UpdateEvent)
    {
        var tl = this.Owner.Transform.Translation;
        tl.Y = 10 - this.TP.Fate/this.TP.MaxFate * this.Owner.Transform.Scale.Y;
        this.Owner.Transform.Translation = tl;
    }
}
